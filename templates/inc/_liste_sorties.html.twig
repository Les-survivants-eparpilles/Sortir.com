<div class="container">

    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">Nom de la sortie</th>
            <th scope="col">Date de la sortie</th>
            <th scope="col">Cl√¥ture</th>
            <th scope="col">inscrits/places</th>
            <th scope="col">Etat</th>
            <th scope="col">inscrits</th>
            <th scope="col">Organisateur</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for sortie in sorties %}
        <tr>
            <th scope="row">
                {{ sortie.nom }}
            </th>
            <td>
                {{ sortie.dateHeureDebut | date('d/m/Y H:i') }}
            </td>
            <td>
                {{ sortie.dateLimiteInscription | date('d/m/Y')}}
            </td>
            <td>
               {{ sortie.relation|length}} /{{ sortie.nbInscriptioonsMax }}
            </td>
            <td>
                {{ sortie.etat.libelle }}
            </td>
            <td>

                {{ sortie.organisateur.id == null ? "X" :
                sortie.organisateur.id ~ " "}}

            </td>
            <td>
                {{ sortie.organisateur.nom }}
            </td>
            <td>

                {{ sortie.etat.id == 1 ? "Afficher" : "Annuler"}}

            </td>


        </tr>
        {% endfor %}
        </tbody>
    </table>

</div>