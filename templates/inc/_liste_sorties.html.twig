<div class="container">

    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">Nom de la sortie</th>
            <th scope="col">Date de la sortie</th>
            <th scope="col">Cl√¥ture</th>
            <th scope="col">inscrits/places</th>
            <th scope="col">Etat</th>
            <th scope="col">inscrits</th>
            <th scope="col">Organisateur</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for sortie in sorties %}
            {% for relation in sortie.relation %}
        <tr>
            <th scope="row">
                {{ sortie.nom }}
            </th>
            <td>
                {{ sortie.dateHeureDebut | date('d/m/Y H:i') }}
            </td>
            <td>
                {{ sortie.dateLimiteInscription | date('d/m/Y')}}
            </td>
            <td>
               {{ sortie.relation|length}} /{{ sortie.nbInscriptioonsMax }}
            </td>
            <td>
                {{ sortie.etat.libelle }}
            </td>
            <td>

                   {% if user.id is same as (relation.id) %}
                       <span class="badge badge-info">inscrit</span>

                   {% endif %}

            </td>
            <td>
                <a href="{{ path("participant_autreProfil", {"id" : sortie.organisateur.id}) }}">
                    {{ sortie.organisateur.nom }}
                </a>
            </td>
            <td>

                {#  Bouton Afficher #}
                {% if sortie.etat.id != 1 %}
                <a href="{{ path("sortie_detail", {"id" : sortie.id}) }}">Afficher</a>
                {% endif %}

                {#  Bouton s'inscrire   #}
                {% if user.id != relation.id and sortie.etat.id == 2 %}
                <a href="{{ path("inscrire_participant", {"id" :sortie.id }) }}">S'inscrire</a>
                {% endif %}

                {#  Bouton Se desister   #}
                {% if user.id == relation.id and (sortie.etat.id  in [2,3]) %}
                <a href="{{ path("desiste_participant", {"id" :sortie.id }) }}">Se desister</a>
                {% endif %}

                {#  Bouton Modifier   #}
                {% if user.id == sortie.organisateur.id and sortie.etat.id in [1]  %}
                <a href="{{ path("desiste_participant", {"id" :sortie.id }) }}">Modifier</a>

                {#Bouton Publier#}
                <a href="{{ path("desiste_participant", {"id" :sortie.id }) }}">Publier</a>
                {% endif %}

                {#Bouton Annuler#}
                {% if user.id == sortie.organisateur.id and sortie.etat.id in [2] %}
                <a href="{{ path("desiste_participant", {"id" :sortie.id }) }}">Annuler</a>
                {% endif %}
            </td>
        </tr>
            {% endfor %}
        {% endfor %}
        </tbody>
    </table>

</div>