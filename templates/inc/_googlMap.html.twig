
{% block head %}
    <meta name="viewport" content="initial-scale=1.0, user-scalable=no">
{% endblock %}


<div id="map"></div>
{% block script %}
<script>

    function initMap() {
        var myLatLng = {lat:48.0389113{#{{sorties.getLieu().getLatitude()}}#},
                        lng:-1.6922895 {#{{sorties.getLieu().getLongitude()}}#}};

        var map = new google.maps.Map(document.getElementById('map'), {
            zoom: 10,
            center: myLatLng
        });

        var marker = new google.maps.Marker({
            position: myLatLng,
            map: map,
            title: '{{sorties.getLieu().getVille().getNom()}}'
        });
    }
</script>
<script async defer
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCEtsWzngoRTP5T7e3yHTkS-CtTllAxe7o
&callback=initMap">
</script>
{% endblock %}
